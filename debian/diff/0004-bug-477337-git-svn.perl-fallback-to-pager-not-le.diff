From 7a3033e61844a0d57ec7b97ff5b625a78ee57a41 Mon Sep 17 00:00:00 2001
From: Gerrit Pape <pape@smarden.org>
Date: Wed, 28 May 2008 19:32:21 +0000
Subject: [PATCH] bug#477337: git-svn.perl: fallback to 'pager' not 'less' if PAGER is unset

http://bugs.debian.org/477337
---
 git-svn.perl |    2 +-
 1 files changed, 1 insertions(+), 1 deletions(-)

diff --git a/git-svn.perl b/git-svn.perl
index fc07094..05344ed 100755
--- a/git-svn.perl
+++ b/git-svn.perl
@@ -4374,7 +4374,7 @@ sub git_svn_log_cmd {
 sub config_pager {
 	$pager ||= $ENV{GIT_PAGER} || $ENV{PAGER};
 	if (!defined $pager) {
-		$pager = 'less';
+		$pager = 'pager';
 	} elsif (length $pager == 0 || $pager eq 'cat') {
 		$pager = undef;
 	}
