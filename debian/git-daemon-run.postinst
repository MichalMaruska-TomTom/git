#!/bin/sh
set -e

test "$1" = 'configure' || exit 0

getent passwd gitlog >/dev/null || \
  adduser --system --home /nonexistent --no-create-home gitlog

# enable git-daemon service if not yet done
test -e /var/service/git-daemon || test -h /var/service/git-daemon || \
  exec ln -s /etc/sv/git-daemon /var/service/

# restart git-daemon service if it was running
sv -v term git-daemon || :
